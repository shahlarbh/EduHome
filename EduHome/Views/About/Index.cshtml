@using EduHome.ViewModels;
@{
    AboutViewModel aboutViewModel = Model;
    var aboutBanner = aboutViewModel.AboutBanners;
    var teachers = aboutViewModel.Teachers;
    var carusels = aboutViewModel.Carusels;
    var videos = aboutViewModel.Videos;
    var noticeLeft = aboutViewModel.NoticeLefts;
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            @foreach(var ab in aboutBanner)
            {
                <div class="col-md-6 col-sm-6">
                    <div class="about-content">
                        <h2>@Html.Raw(ab.Title)</h2>
                        @Html.Raw(ab.Description)
                        <a class="default-btn" href="#">view courses</a>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="about-img">
                        <img src="~/@ab.ImageUrl" alt="about">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var teacher in teachers)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a href="@teacher.Link"><img src="~/@teacher.ImageUrl" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="@teacher.Link">@teacher.FullName</a></h2>
                            <h4>@teacher.Profession</h4>
                            <ul>
                                <li><a href="@teacher.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@teacher.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-vimeo"></i></a></li>
                                <li><a href="@teacher.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            @foreach (var carusel in carusels)
            {
                <div class="testimonial-owl owl-theme owl-carousel">
                    <div class="col-md-8 col-md-offset-2 col-sm-12">
                        <div class="single-testimonial">
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="~/@carusel.ImageUrl" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@carusel.Info</p>
                                    <h4>@carusel.FullName</h4>
                                    <h5>@carusel.Position</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            @foreach(var video in videos)
            {
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="notice-right-wrapper mb-25 pb-25">
                        <h3>TAKE A VIDEO TOUR</h3>
                        <div class="notice-video">
                            <div class="video-icon video-hover">
                                <a class="video-popup" href="@video.VideoUrl">
                                    <i class="zmdi zmdi-play"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @foreach (var nL in noticeLeft)
                        {
                            <div class="single-notice-left mb-25 pb-25">
                                <h4>@nL.Date</h4>
                                <p>@nL.Info</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->