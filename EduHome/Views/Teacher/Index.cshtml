@using EduHome.ViewModels;
@{
    TeacherViewModel teacherViewModel = Model;
    var teachers = teacherViewModel.Teachers;
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row" id="teacherRow">
            @foreach(var teacher in teachers)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-action="details" asp-route-id="@teacher.Id"><img src="~/@teacher.ImageUrl" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="@teacher.Link">@teacher.FullName</a></h2>
                            <h4>@teacher.Profession</h4>
                            <ul>
                                <li><a href="@teacher.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@teacher.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-vimeo"></i></a></li>
                                <li><a href="@teacher.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row justify-content-center">
            <input value="@ViewBag.TeacherCount" type="hidden" id="teacherCount"/>
            <button class="btn btn-primary" id="loadTeacher">Load more</button>
        </div>
    </div>
</div>
<!-- Teacher End -->